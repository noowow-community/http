{
  "name": "@stone-js/http",
  "version": "0.0.1",
  "description": "Stone.js Http foundation",
  "author": "Mr. Stone <evensstone@gmail.com>",
  "license": "MIT",
  "repository": "git@github.com:stonemjs/http.git",
  "homepage": "https://github.com/stonemjs/http#readme",
  "bugs": {
    "url": "https://github.com/stonemjs/http/issues"
  },
  "keywords": [
    "Http",
    "Stone.js"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/types/index.d.mts",
  "files": [
    "/dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/types/index.d.mts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "types": "tsc",
    "lint": "standard src",
    "lint:fix": "standard --fix src tests",
    "lint:test": "standard --env jest tests",
    "predoc": "npm run build && rimraf docs",
    "doc": "jsdoc src -r -a all -c jsdoc.json -R README.md -d docs/jsdoc",
    "doc:serve": "npm run doc && npx http-server docs/jsdoc -p 8081",
    "build": "npm run lint && rollup -c && npm run types",
    "release": "npm run test:text && npm run build && npm publish --access public",
    "test": "npm run lint:test && jest -i",
    "test:cvg": "npm run lint:test && jest -i --coverage",
    "test:text": "npm run test:cvg -- --coverageReporters=text",
    "test:html": "npm run test:cvg -- --coverageReporters=html text",
    "test:lcov": "npm run test:cvg -- --coverageReporters=lcov text"
  },
  "dependencies": {
    "@stone-js/common": "^1.0.0",
    "@stone-js/pipeline": "^1.0.0",
    "accepts": "^1.3.8",
    "bytes": "^3.1.2",
    "co-body": "^6.1.0",
    "content-disposition": "^0.5.4",
    "content-type": "^1.0.5",
    "cookie": "^0.5.0",
    "cookie-signature": "^1.2.1",
    "encodeurl": "^1.0.2",
    "escape-html": "^1.0.3",
    "etag": "^1.8.1",
    "filesize": "^10.1.0",
    "formidable": "^3.5.1",
    "fresh": "^0.5.2",
    "ip-range-check": "^0.2.0",
    "lodash": "^4.17.21",
    "mime": "^3.0.0",
    "on-finished": "^2.4.1",
    "proxy-addr": "^2.0.7",
    "range-parser": "^1.2.1",
    "raw-body": "^2.5.2",
    "safe-buffer": "^5.2.1",
    "send": "^0.18.0",
    "statuses": "^2.0.1",
    "type-is": "^1.6.18",
    "vary": "^1.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.22.20",
    "@babel/eslint-parser": "^7.22.15",
    "@babel/preset-env": "^7.22.20",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "babel-jest": "^29.7.0",
    "docdash": "^2.0.2",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "jsdoc-to-markdown": "^8.0.1",
    "rimraf": "^5.0.5",
    "rollup": "^4.1.5",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-node-externals": "^6.1.2",
    "standard": "^17.1.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "standard": {
    "parser": "@babel/eslint-parser",
    "globals": [
      "it",
      "jest",
      "test",
      "expect",
      "describe",
      "afterEach",
      "beforeEach"
    ]
  }
}
