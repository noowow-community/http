{
  "name": "@stone-js/http",
  "version": "0.0.1",
  "description": "Vanilla Javascript Http foundation",
  "author": "Mr Stone <pierre.evens16@gmail.com>",
  "license": "MIT",
  "repository": "git@github.com:stonemjs/http.git",
  "homepage": "https://github.com/stonemjs/http#readme",
  "bugs": {
    "url": "https://github.com/stonemjs/http/issues"
  },
  "keywords": [
    "Http",
    "Noowow"
  ],
  "main": "./src/index.mjs",
  "module": "./src/index.mjs",
  "types": "./dist/index.d.mts",
  "typings": "./dist/index.d.mts",
  "files": [
    "/src",
    "/dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./src/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./src/index.mjs"
      }
    }
  },
  "scripts": {
    "types": "tsc",
    "lint": "standard src",
    "lint:fix": "standard --fix src tests",
    "lint:test": "standard --env mocha tests",
    "predoc": "rimraf docs",
    "doc": "jsdoc src/index.js -d docs",
    "build": "npm run lint && rollup -c && npm run types",
    "build:dev": "npm run lint && cross-env NODE_ENV=dev rollup -c && npm run types",
    "release": "npm run test:summary && npm run build && npm publish --access public",
    "test": "npm run lint:test && mocha --experimental-modules --no-warnings -r tests/setup.mjs tests/*.spec.mjs tests/**/*.spec.mjs",
    "test:html": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text npm run test",
    "test:lcov": "cross-env NODE_ENV=test nyc --reporter=lcovonly --reporter=text npm run test",
    "test:summary": "cross-env NODE_ENV=test nyc --reporter=text-summary npm run test",
    "test:text": "cross-env NODE_ENV=test nyc --reporter=text npm run test"
  },
  "devDependencies": {
    "@babel/core": "^7.22.20",
    "@babel/eslint-parser": "^7.22.15",
    "@babel/preset-env": "^7.22.20",
    "@babel/register": "^7.22.15",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "babel-plugin-istanbul": "^6.1.1",
    "chai": "^4.3.8",
    "cross-env": "^7.0.3",
    "jsdoc": "^4.0.2",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.1.5",
    "rollup-plugin-delete": "^2.0.0",
    "sinon": "^16.0.0",
    "standard": "^17.1.0",
    "typescript": "^5.2.2"
  },
  "standard": {
    "parser": "@babel/eslint-parser",
    "globals": [
      "describe",
      "it"
    ]
  }
}
